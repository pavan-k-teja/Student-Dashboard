<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/dashboard/styles.css" />
    <link rel="stylesheet" href="/oppurtunity/style.css" />
    <title>Student Dashboard</title>
    <link rel="shortcut icon" href="/home/favicon.png" type="image/x-icon">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  </head>
  <body id="body">
    <div class="container-dashboard">
      <nav class="navbar-dashboard">
        <div class="nav_icon" onclick="toggleSidebar()">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <div class="navbar__left">
          <!-- <a href="#">Subscribers</a>
          <a href="#">Video Management</a> -->
          <a class="active_link" href="#">Student</a>
        </div>
        <div class="navbar__right">
          <a href="#">
            <img width="50" src="/dashboard/assets/avatar.png" alt="" />
            <!-- <i class="fa fa-user-circle-o" aria-hidden="true"></i> -->
          </a>
        </div>
      </nav>

      <main>
        <div class="main__container">
          <div class="section-title">
            <h2>Oppurtunities</h2>
          </div>
          <!-- MAIN TITLE STARTS HERE -->
          <div class="skill-row">
            <% info.forEach(element => { %>
          <div class="recipe-card">
              <article>
                  <h2><%=element.title%></h2>
          
                  <ul>
                      <li><span class="icon"><img style="width: 16px;" src="https://img.icons8.com/flat-round/64/000000/play--v1.png"/></span><span>Starts on <%=element.startDate%></span></li>
                      <li><span class="icon"><img style="width: 19px;" src="https://img.icons8.com/cute-clipart/64/000000/planner.png"/></span><span><%=element.duration%></span></li>
                      <li><span class="icon"><img style="width: 17px;" src="https://img.icons8.com/dusk/64/000000/hourglass-sand-top.png"/></span><span>Apply By <%=element.applyBy%></span></li>
                  </ul>
          
                  <p><%=element.desc%></p>
                  <p class="ingredients"><span>Skills Required:&nbsp;</span><%=element.skills%></p>
                  <a href="<%=element.applyLink%>" target="_blank">Apply Now</a>
                </article>
          </div>
          <% }) %>
          </div>     
        </div>
      </main>

      <div id="sidebar">
        <div class="sidebar__title">
          <div class="sidebar__img">
            <img src="/dashboard/assets/student.png" alt="logo" />
            <h1><%=name%></h1>
          </div>
          <i
            onclick="closeSidebar()"
            class="fa fa-times"
            id="sidebarIcon"
            aria-hidden="true"
          ></i>
        </div>

        <div class="sidebar__menu">
          <div class="sidebar__link">
            <i class="fa fa-home"></i>
            <a href="/user/home">Dashboard</a>
          </div>
          <h2>Class</h2>
          <div class="sidebar__link">
            <i class="fa fa-user-secret" aria-hidden="true"></i>
            <a href="/user/attendance">Attendance</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-building-o"></i>
            <a href="/user/timetable">Timetable</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-wrench"></i>
            <a href="/user/almanac">Almanac</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-archive"></i>
            <a href="/user/studyMaterial">Study Material</a>
          </div>
          <h2>College</h2>
          <div class="sidebar__link">
            <i class="fa fa-question"></i>
            <a href="/user/studentRequests/get">Student Requests</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-sign-out"></i>
            <a href="/user/complaint/get">Complaints</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-calendar-check-o"></i>
            <a href="/user/library">Library</a>
          </div>
          <div class="sidebar__link active_menu_link">
            <i class="fa fa-files-o"></i>
            <a href="/user/opportunity">Oppurtunities</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-files-o"></i>
            <a href="/user/alumninetwork">Alumni Network</a>
          </div>
          
          <!-- <div class="sidebar__logout">
            <i class="fa fa-power-off"></i>
            <a href="#">Log out</a>
          </div> -->
          <div class="sidebar__logout">
            <i class="fa fa-power-off"></i>
            <a onclick="document.getElementById('logout').submit();" style="cursor: pointer;">Log out</a>
          </div>
        </div>
      </div>
    </div>
    <form id="logout" method="post" action="/user/logout"></form>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/dashboard/script.js"></script>
  </body>
</html>
